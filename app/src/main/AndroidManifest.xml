<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.mindblow.humanoid">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/humanoid"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="io.mindblow.humanoid.activity.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="io.mindblow.humanoid.activity.MasterActivity" />
        <activity android:name="io.mindblow.humanoid.activity.SlaveActivity" />
        <activity android:name="io.mindblow.humanoid.activity.SelectActivity" />
        <activity android:name="io.mindblow.humanoid.activity.MappingActivity" />
    </application>

</manifest>
